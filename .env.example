# ==================================================
# WRX Generator V2.0 - Environment Variables
# ==================================================
# Copy this file to .env and fill in your values
# Never commit .env files to version control!

# ==================================================
# SUPABASE CONFIGURATION
# ==================================================
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/_/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database connection (for direct database access)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# ==================================================
# STRIPE CONFIGURATION
# ==================================================
# Get these from your Stripe dashboard
# https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs for subscription tiers
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
STRIPE_PRICE_ENTERPRISE_YEARLY=price_...

# ==================================================
# APPLICATION CONFIGURATION
# ==================================================

# App URLs
APP_URL=http://localhost:5173
API_URL=http://localhost:3000
SHORT_URL_DOMAIN=http://localhost:3000

# Environment
NODE_ENV=development

# ==================================================
# JWT CONFIGURATION
# ==================================================
# Used for additional token signing (optional, Supabase handles main auth)

JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# ==================================================
# RATE LIMITING
# ==================================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==================================================
# GOOGLE OAUTH (Optional)
# ==================================================
# https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==================================================
# GITHUB OAUTH (Optional)
# ==================================================
# https://github.com/settings/developers

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ==================================================
# ANALYTICS & ADS (Optional)
# ==================================================

GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX
ADSENSE_SLOT_ID=XXXXXXXXXX

# ==================================================
# SENTRY ERROR TRACKING (Optional)
# ==================================================

SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ==================================================
# EMAIL CONFIGURATION (Optional - for custom emails)
# ==================================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@wrx.io
