{
  "extends": "../../packages/config/typescript/react.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@wrx/shared": ["../../packages/shared/src"],
      "@wrx/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/**/*"],
  "exclude": ["node_modules", "dist", ".expo"]
}
