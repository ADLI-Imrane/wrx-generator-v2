{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "./base.json",
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["ES2022", "DOM"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Emit */
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  }
}
